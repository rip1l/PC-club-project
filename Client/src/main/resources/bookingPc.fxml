<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" alignment="TOP_CENTER" fillWidth="false" prefHeight="600.0" prefWidth="850.0" spacing="15" style="-fx-padding: 25; -fx-background-color: #121212;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Сlient.AddClientOrderController">

    <!-- Верхняя панель с заголовком и кнопкой назад -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 15 0;">
        <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: #9c4dff; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-size: 14px; -fx-cursor: hand; -fx-pref-width: 80; -fx-pref-height: 35;" text="← Назад">
            <font>
                <Font name="System Bold" />
            </font>
        </Button>

        <Label style="-fx-text-fill: White; -fx-font-size: 32px; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(156,77,255,0.8), 0, 0, 0, 5);" text="Бронирование компьютера" />
    </HBox>

    <!-- Основная форма бронирования -->
    <VBox alignment="CENTER" prefHeight="267.0" prefWidth="600.0" spacing="15" style="-fx-background-color: rgba(30,30,30,0.7);                  -fx-background-radius: 15;                  -fx-border-color: #9c4dff;                  -fx-border-width: 1;                  -fx-border-radius: 15;                  -fx-padding: 25;                  -fx-min-width: 600;">

        <!-- Выбор компьютера -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 16px; -fx-min-width: 200;" text="Номер компьютера:" />
            <ComboBox fx:id="masterComboBox" prefWidth="300.0" style="-fx-background-color: #2b2b2b;                             -fx-text-fill: white;                             -fx-border-color: #9c4dff;                             -fx-border-width: 1;                             -fx-border-radius: 5;                             -fx-background-radius: 5;" />
        </HBox>

        <!-- Выбор тарифа -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 16px; -fx-min-width: 200;" text="Тариф:" />
            <ComboBox fx:id="serviceComboBox" prefWidth="300.0" style="-fx-background-color: #2b2b2b;                             -fx-text-fill: white;                             -fx-border-color: #9c4dff;                             -fx-border-width: 1;                             -fx-border-radius: 5;                             -fx-background-radius: 5;" />
        </HBox>

        <!-- Выбор даты -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 16px; -fx-min-width: 200;" text="Дата:" />
            <DatePicker fx:id="datePicker" prefWidth="300.0" style="-fx-background-color: #2b2b2b;                               -fx-text-fill: white;                               -fx-border-color: #9c4dff;                               -fx-border-width: 1;                               -fx-border-radius: 5;                               -fx-background-radius: 5;" />
        </HBox>

        <!-- Выбор времени -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 16px; -fx-min-width: 200;" text="Время:" />
            <ComboBox fx:id="timeComboBox" prefWidth="300.0" style="-fx-background-color: #2b2b2b;                             -fx-text-fill: white;                             -fx-border-color: #9c4dff;                             -fx-border-width: 1;                             -fx-border-radius: 5;                             -fx-background-radius: 5;" />
        </HBox>
      <Label fx:id="PriceLabel" style="-fx-text-fill: #e0e0e0; -fx-font-size: 16px; -fx-min-width: 200;" text="Сумма списания:" />
    </VBox>

    <!-- Панель кнопок -->
    <HBox alignment="CENTER" spacing="30" style="-fx-padding: 20 0 0 0;">
        <Button onAction="#saveAppointment" style="-fx-background-color: linear-gradient(to bottom, #3a1c71, #9c4dff);                        -fx-text-fill: white;                        -fx-font-size: 16px;                        -fx-font-weight: bold;                        -fx-pref-height: 45;                        -fx-pref-width: 200;                        -fx-background-radius: 10;                        -fx-cursor: hand;" text="Забронировать" />
    </HBox>
</VBox>
