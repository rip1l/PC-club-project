<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: #121212;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AuthorisationController">

    <Pane maxHeight="320.0" maxWidth="346.0" prefHeight="320.0" prefWidth="346.0" style="-fx-background-color: rgba(30,30,30,0.9); -fx-background-radius: 15; -fx-border-color: #9c4dff; -fx-border-width: 2; -fx-border-radius: 15;">

        <!-- Заголовок формы -->
        <Label layoutX="23.0" layoutY="26.0" prefHeight="40.0" prefWidth="68.0" style="-fx-effect: dropshadow(three-pass-box, rgba(156,77,255,0.5), 0, 0, 0, 5);" text="Вход" textFill="WHITE">
            <font>
                <Font name="System Bold" size="27.0" />
            </font>
        </Label>

        <!-- Поле для логина -->
        <TextField fx:id="usernameField" layoutX="23.0" layoutY="113.0" prefHeight="40.0" prefWidth="300.0" promptText="Введите логин" style="-fx-background-color: #2b2b2b; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-prompt-text-fill: #a0a0a0; -fx-font-size: 14px;" />

        <!-- Поле для пароля -->
        <PasswordField fx:id="passwordField" layoutX="23.0" layoutY="180.0" prefHeight="40.0" prefWidth="300.0" promptText="Введите пароль" style="-fx-background-color: #2b2b2b; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-prompt-text-fill: #a0a0a0; -fx-font-size: 14px;" />

        <!-- Кнопка входа -->
        <Button fx:id="loginButton" layoutX="118.0" layoutY="249.0" onAction="#handleLogin" prefHeight="40.0" prefWidth="110.0" style="-fx-background-color: linear-gradient(to bottom, #3a1c71, #9c4dff); -fx-text-fill: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(156,77,255,0.3), 5, 0, 0, 1); -fx-font-size: 16px;" text="Войти">
            <font>
                <Font name="System Bold" />
            </font>
        </Button>

        <!-- Кнопка назад -->
        <Button fx:id="exitButton" layoutX="250.0" layoutY="26.0" onAction="#handleExit" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: #9c4dff; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand; -fx-font-size: 12px;" text="Назад">
        </Button>
    </Pane>
</VBox>
