      <children>
         <!-- Главный заголовок -->
         <Label layoutX="49.0" layoutY="49.0" prefHeight="52.0" prefWidth="273.0" style="-fx-effect: dropshadow(three-pass-box, rgba(156,77,255,0.5), 0, 0, 0, 8);" text="Меню компьютерного клуба" textFill="#fcfcfc">
