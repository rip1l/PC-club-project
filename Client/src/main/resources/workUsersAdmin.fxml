<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainContainer" alignment="TOP_CENTER" fillWidth="false" prefHeight="700.0" prefWidth="900.0" spacing="20" style="-fx-padding: 25; -fx-background-color: #121212;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Admin.WorkUsersAdminController">

    <!-- Заголовок -->
    <HBox alignment="CENTER" style="-fx-background-color: rgba(30,30,30,0.9); -fx-background-radius: 15; -fx-border-color: #9c4dff; -fx-border-width: 2; -fx-padding: 15;">
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(156,77,255,0.8), 0, 0, 0, 8);" text="Работа с пользователями" />
    </HBox>

    <!-- Поиск пользователей -->
    <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10; -fx-background-color: rgba(30,30,30,0.7); -fx-background-radius: 10; -fx-border-color: #9c4dff; -fx-border-width: 1;">
        <Button fx:id="viewAllUsersButton" onAction="#viewAllUsers" style="-fx-background-color: linear-gradient(to bottom, #3a1c71, #9c4dff);                        -fx-text-fill: white;                        -fx-font-size: 14px;                        -fx-font-weight: bold;                        -fx-pref-width: 250;                        -fx-pref-height: 35;                        -fx-background-radius: 5;                        -fx-cursor: hand;" text="Показать всех пользователей" />

        <TextField fx:id="loginTosearchField1" onKeyReleased="#handleSearch" promptText="Введите логин" style="-fx-background-color: #2b2b2b;                          -fx-text-fill: white;                          -fx-border-color: #9c4dff;                          -fx-border-width: 1;                          -fx-border-radius: 5;                          -fx-background-radius: 5;                          -fx-font-size: 14px;                          -fx-pref-width: 200;                          -fx-pref-height: 35;" />
    </HBox>

    <!-- Список пользователей -->
    <ListView fx:id="usersListView" style="-fx-background-color: #1a1a1a;                      -fx-text-fill: white;                      -fx-border-color: #9c4dff;                      -fx-border-width: 1;                      -fx-border-radius: 10;                      -fx-font-size: 14px;                      -fx-padding: 10;" />

    <!-- Управление пользователями -->
    <HBox alignment="CENTER" spacing="15" style="-fx-padding: 15; -fx-background-color: rgba(30,30,30,0.7); -fx-background-radius: 10; -fx-border-color: #9c4dff; -fx-border-width: 1;">
        <TextField fx:id="loginToDeleteField" promptText="Введите логин" style="-fx-background-color: #2b2b2b;                          -fx-text-fill: white;                          -fx-border-color: #9c4dff;                          -fx-border-width: 1;                          -fx-border-radius: 5;                          -fx-background-radius: 5;                          -fx-font-size: 14px;                          -fx-pref-width: 180;                          -fx-pref-height: 35;" />

        <Button fx:id="deleteUserButton" onAction="#deleteUser" style="-fx-background-color: linear-gradient(to bottom, #3a1c71, #9c4dff);                        -fx-text-fill: white;                        -fx-font-size: 14px;                        -fx-font-weight: bold;                        -fx-pref-width: 120;                        -fx-pref-height: 35;                        -fx-background-radius: 5;                        -fx-cursor: hand;" text="Удалить" />

        <TextField fx:id="loginToUpdateField" promptText="Введите логин" style="-fx-background-color: #2b2b2b;                          -fx-text-fill: white;                          -fx-border-color: #9c4dff;                          -fx-border-width: 1;                          -fx-border-radius: 5;                          -fx-background-radius: 5;                          -fx-font-size: 14px;                          -fx-pref-width: 180;                          -fx-pref-height: 35;" />

        <TextField fx:id="newRoleField" promptText="Введите новую роль" style="-fx-background-color: #2b2b2b;                          -fx-text-fill: white;                          -fx-border-color: #9c4dff;                          -fx-border-width: 1;                          -fx-border-radius: 5;                          -fx-background-radius: 5;                          -fx-font-size: 14px;                          -fx-pref-width: 180;                          -fx-pref-height: 35;" />

        <Button fx:id="updateRoleButton" onAction="#updateUserRole" style="-fx-background-color: linear-gradient(to bottom, #3a1c71, #9c4dff);                        -fx-text-fill: white;                        -fx-font-size: 14px;                        -fx-font-weight: bold;                        -fx-pref-width: 120;                        -fx-pref-height: 35;                        -fx-background-radius: 5;                        -fx-cursor: hand;" text="Изменить" />
    </HBox>

    <!-- Сортировка и фильтрация -->
    <HBox alignment="CENTER" spacing="15" style="-fx-padding: 15; -fx-background-color: rgba(30,30,30,0.7); -fx-background-radius: 10; -fx-border-color: #9c4dff; -fx-border-width: 1;">
        <ComboBox fx:id="sortComboBox" promptText="Сортировка" style="-fx-background-color: #2b2b2b;                         -fx-text-fill: white;                         -fx-border-color: #9c4dff;                         -fx-border-width: 1;                         -fx-border-radius: 5;                         -fx-background-radius: 5;                         -fx-pref-width: 120;                         -fx-pref-height: 35;">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="A-Z" />
                    <String fx:value="Z-A" />
                </FXCollections>
            </items>
        </ComboBox>

        <Button onAction="#handleSort" style="-fx-background-color: linear-gradient(to bottom, #3a1c71, #9c4dff);                        -fx-text-fill: white;                        -fx-font-size: 14px;                        -fx-font-weight: bold;                        -fx-pref-width: 120;                        -fx-pref-height: 35;                        -fx-background-radius: 5;                        -fx-cursor: hand;" text="Сортировать" />

        <ComboBox fx:id="roleComboBox" promptText="Роль" style="-fx-background-color: #2b2b2b;                         -fx-text-fill: white;                         -fx-border-color: #9c4dff;                         -fx-border-width: 1;                         -fx-border-radius: 5;                         -fx-background-radius: 5;                         -fx-pref-width: 120;                         -fx-pref-height: 35;">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="client" />
                    <String fx:value="admin" />
                </FXCollections>
            </items>
        </ComboBox>

        <Button onAction="#handleFilter" style="-fx-background-color: linear-gradient(to bottom, #3a1c71, #9c4dff);                        -fx-text-fill: white;                        -fx-font-size: 14px;                        -fx-font-weight: bold;                        -fx-pref-width: 120;                        -fx-pref-height: 35;                        -fx-background-radius: 5;                        -fx-cursor: hand;" text="Фильтровать" />
    </HBox>

    <!-- Кнопка назад -->
    <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: #9c4dff; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 40; -fx-cursor: hand;" text="Назад" />
</VBox>
