<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" alignment="TOP_CENTER" fillWidth="false" prefHeight="600.0" prefWidth="900.0" spacing="15" style="-fx-padding: 25; -fx-background-color: #121212;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Сlient.InfoClientController">

   <!-- Верхняя панель с заголовком и кнопкой назад -->
   <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 15 0;">
      <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: #9c4dff; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-size: 14px; -fx-cursor: hand; -fx-pref-width: 80; -fx-pref-height: 35;" text="← Назад">
         <font>
            <Font name="System Bold" />
         </font>
      </Button>

      <Label style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(156,77,255,0.8), 0, 0, 0, 5);" text="Личный кабинет" />
   </HBox>

   <!-- Основной контент в две колонки -->
   <HBox alignment="TOP_CENTER" spacing="40" style="-fx-padding: 20 0 0 0;">
      <!-- Левая колонка - информация о пользователе -->
      <VBox style="-fx-background-color: rgba(30,30,30,0.7);                     -fx-background-radius: 15;                     -fx-border-color: #9c4dff;                     -fx-border-width: 1;                     -fx-border-radius: 15;                     -fx-padding: 25;                     -fx-min-width: 400;">
         <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 24; -fx-font-weight: bold; -fx-padding: 0 0 15 0;" text="Персональные данные" />

         <VBox spacing="12">
            <!-- Группировка полей -->
            <VBox spacing="5">
               <Label style="-fx-text-fill: #a0a0a0; -fx-font-size: 14;" text="Логин" />
               <Label fx:id="loginLabel" style="-fx-text-fill: #9c4dff; -fx-font-size: 18;" text="-" />
            </VBox>

            <VBox spacing="5">
               <Label style="-fx-text-fill: #a0a0a0; -fx-font-size: 14;" text="ФИО" />
               <HBox spacing="10">
                  <Label fx:id="lastNameLabel" style="-fx-text-fill: #9c4dff; -fx-font-size: 18;" text="-" />
                  <Label fx:id="firstNameLabel" style="-fx-text-fill: #9c4dff; -fx-font-size: 18;" text="-" />
                  <Label fx:id="middleNameLabel" style="-fx-text-fill: #9c4dff; -fx-font-size: 18;" text="-" />
               </HBox>
            </VBox>

            <VBox spacing="5">
               <Label style="-fx-text-fill: #a0a0a0; -fx-font-size: 14;" text="Телефон" />
               <Label fx:id="phoneNumberLabel" style="-fx-text-fill: #9c4dff; -fx-font-size: 18;" text="-" />
            </VBox>

            <VBox spacing="5">
               <Label style="-fx-text-fill: #a0a0a0; -fx-font-size: 14;" text="Баланс" />
               <Label fx:id="BalanceLabel" style="-fx-text-fill: #9c4dff; -fx-font-size: 18;" text="-" />
            </VBox>
         </VBox>
      </VBox>

      <!-- Правая колонка - действия -->
      <VBox spacing="20" style="-fx-min-width: 300;">
         <Button onAction="#handleAddInfo" style="-fx-background-color: linear-gradient(to bottom, #3a1c71, #9c4dff);                            -fx-text-fill: white;                            -fx-font-size: 16;                            -fx-font-weight: bold;                            -fx-pref-height: 50;                            -fx-background-radius: 10;                            -fx-cursor: hand;" text="Заполнить данные" />

         <Button onAction="#handleUpdInfo" style="-fx-background-color: linear-gradient(to bottom, #3a1c71, #9c4dff);                            -fx-text-fill: white;                            -fx-font-size: 16;                            -fx-font-weight: bold;                            -fx-pref-height: 50;                            -fx-background-radius: 10;                            -fx-cursor: hand;" text="Изменить " />

         <!-- Дополнительная информация -->
         <VBox style="-fx-background-color: rgba(30,30,30,0.7);                         -fx-background-radius: 15;                         -fx-border-color: #9c4dff;                         -fx-border-width: 1;                         -fx-border-radius: 15;                         -fx-padding: 15;                         -fx-spacing: 10;">
            <Label style="-fx-text-fill: #e0e0e0; -fx-font-weight: bold;" text="Контакты клуба" />
            <Label fx:id="mapLabel" style="-fx-text-fill: #9c4dff; -fx-cursor: hand;" text="На картах" />
            <Label fx:id="VkLabel" style="-fx-text-fill: #9c4dff; -fx-cursor: hand;" text="VK" />
            <Label fx:id="InstaLabel" style="-fx-text-fill: #9c4dff; -fx-cursor: hand;" text="Instagram" />
         </VBox>
      </VBox>
   </HBox>
</VBox>
