<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" alignment="TOP_CENTER" fillWidth="false" prefHeight="500.0" prefWidth="600.0" spacing="15" style="-fx-padding: 25; -fx-background-color: #121212;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Сlient.AddBalanceController">

    <!-- Верхняя панель с заголовком и кнопкой назад -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 15 0;">
        <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: #9c4dff; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-size: 14px; -fx-cursor: hand; -fx-pref-width: 80; -fx-pref-height: 35;" text="← Назад">
            <font>
                <Font name="System Bold" />
            </font>
        </Button>

        <Label style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(156,77,255,0.8), 0, 0, 0, 5);" text="Пополнение баланса" />
    </HBox>

    <!-- Основная форма -->
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(30,30,30,0.7);                  -fx-background-radius: 15;                  -fx-border-color: #9c4dff;                  -fx-border-width: 1;                  -fx-border-radius: 15;                  -fx-padding: 25;                  -fx-min-width: 500;">

        <!-- Способ оплаты -->
        <VBox spacing="5">
            <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 16px;" text="Способ оплаты:" />
            <ComboBox fx:id="paymentMethodComboBox" prefWidth="400.0" promptText="Выберите способ оплаты" style="-fx-background-color: #2b2b2b;                             -fx-text-fill: white;                             -fx-border-color: #9c4dff;                             -fx-border-width: 1;                             -fx-border-radius: 5;                             -fx-background-radius: 5;" />
        </VBox>

        <!-- Сумма пополнения -->
        <VBox spacing="5">
            <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 16px;" text="Сумма пополнения:" />
            <HBox alignment="CENTER_LEFT" spacing="10">
                <TextField fx:id="amountField" prefWidth="300.0" promptText="Введите сумму" style="-fx-background-color: #2b2b2b;                                  -fx-text-fill: white;                                  -fx-border-color: #9c4dff;                                  -fx-border-width: 1;                                  -fx-border-radius: 5;                                  -fx-background-radius: 5;" />
            <Label style="-fx-text-fill: #9c4dff; -fx-font-size: 15 px; -fx-font-weight: bold;" text="BYN" />
            </HBox>
        </VBox>

        <!-- Новый баланс -->
        <VBox spacing="5" style="-fx-padding: 10 0 0 0;">
            <Label style="-fx-text-fill: #a0a0a0; -fx-font-size: 14px;" text="Баланс после пополнения:" />
            <Label fx:id="newBalanceLabel" style="-fx-text-fill: #9c4dff; -fx-font-size: 24px; -fx-font-weight: bold;" text="0 BYN" />
        </VBox>

        <!-- Кнопка пополнения -->
        <Button fx:id="addBalanceButton" onAction="#addBalance" style="-fx-background-color: linear-gradient(to bottom, #3a1c71, #9c4dff);                        -fx-text-fill: white;                        -fx-font-size: 18px;                        -fx-font-weight: bold;                        -fx-pref-height: 45;                        -fx-pref-width: 200;                        -fx-background-radius: 10;                        -fx-cursor: hand;" text="Пополнить" />
    </VBox>
</VBox>
