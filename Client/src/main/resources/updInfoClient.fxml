<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" alignment="TOP_CENTER" fillWidth="false" prefHeight="600.0" prefWidth="850.0" spacing="15" style="-fx-padding: 25; -fx-background-color: #121212;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Сlient.updInfoClientController">

    <!-- Верхняя панель с заголовком и кнопкой назад -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 15 0;">
        <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: #9c4dff; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-size: 14px; -fx-cursor: hand; -fx-pref-width: 80; -fx-pref-height: 35;" text="← Назад">
            <font>
                <Font name="System Bold" />
            </font>
        </Button>

        <Label style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(156,77,255,0.8), 0, 0, 0, 5);" text="Личные данные" />
    </HBox>

    <!-- Основная форма -->
    <VBox alignment="CENTER" spacing="15" style="-fx-background-color: rgba(30,30,30,0.7);                  -fx-background-radius: 15;                  -fx-border-color: #9c4dff;                  -fx-border-width: 1;                  -fx-border-radius: 15;                  -fx-padding: 25;                  -fx-min-width: 500;">

        <!-- Личная информация -->
        <VBox spacing="15">
            <VBox spacing="5">
                <Label style="-fx-text-fill: #a0a0a0; -fx-font-size: 14px;" text="Логин" />
                <TextField fx:id="loginField" promptText="Введите логин" style="-fx-background-color: #2b2b2b;                                 -fx-text-fill: white;                                 -fx-border-color: #9c4dff;                                 -fx-border-width: 1;                                 -fx-border-radius: 5;                                 -fx-background-radius: 5;                                 -fx-font-size: 16px;                                 -fx-pref-height: 40;" />
            </VBox>

            <HBox spacing="15">
                <VBox spacing="5" style="-fx-min-width: 200;">
                    <Label style="-fx-text-fill: #a0a0a0; -fx-font-size: 14px;" text="Фамилия" />
                    <TextField fx:id="lastNameField" promptText="Фамилия" style="-fx-background-color: #2b2b2b;                                     -fx-text-fill: white;                                     -fx-border-color: #9c4dff;                                     -fx-border-width: 1;                                     -fx-border-radius: 5;                                     -fx-background-radius: 5;                                     -fx-font-size: 16px;                                     -fx-pref-height: 40;" />
                </VBox>

                <VBox spacing="5" style="-fx-min-width: 200;">
                    <Label style="-fx-text-fill: #a0a0a0; -fx-font-size: 14px;" text="Имя" />
                    <TextField fx:id="firstNameField" promptText="Имя" style="-fx-background-color: #2b2b2b;                                     -fx-text-fill: white;                                     -fx-border-color: #9c4dff;                                     -fx-border-width: 1;                                     -fx-border-radius: 5;                                     -fx-background-radius: 5;                                     -fx-font-size: 16px;                                     -fx-pref-height: 40;" />
                </VBox>
            </HBox>

            <VBox spacing="5">
                <Label style="-fx-text-fill: #a0a0a0; -fx-font-size: 14px;" text="Отчество" />
                <TextField fx:id="middleNameField" promptText="Отчество" style="-fx-background-color: #2b2b2b;                                 -fx-text-fill: white;                                 -fx-border-color: #9c4dff;                                 -fx-border-width: 1;                                 -fx-border-radius: 5;                                 -fx-background-radius: 5;                                 -fx-font-size: 16px;                                 -fx-pref-height: 40;" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-text-fill: #a0a0a0; -fx-font-size: 14px;" text="Телефон" />
                <TextField fx:id="phoneNumberField" promptText="+375 (__) ___ __ __" style="-fx-background-color: #2b2b2b;                                 -fx-text-fill: white;                                 -fx-border-color: #9c4dff;                                 -fx-border-width: 1;                                 -fx-border-radius: 5;                                 -fx-background-radius: 5;                                 -fx-font-size: 16px;                                 -fx-pref-height: 40;" />
            </VBox>
        </VBox>
    </VBox>

    <!-- Кнопки действий -->
    <HBox alignment="CENTER" spacing="30" style="-fx-padding: 20 0 0 0;">
        <Button fx:id="updButton" onAction="#handleUpdateInfo" style="-fx-background-color: linear-gradient(to bottom, #3a1c71, #9c4dff);                        -fx-text-fill: white;                        -fx-font-size: 18px;                        -fx-font-weight: bold;                        -fx-pref-height: 45;                        -fx-pref-width: 200;                        -fx-background-radius: 10;                        -fx-cursor: hand;" text="Сохранить" />
    </HBox>
</VBox>
