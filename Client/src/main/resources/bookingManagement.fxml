<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #121212;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Admin.BookingManagementController">

    <top>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(30,30,30,0.9);                      -fx-background-radius: 0 0 15 15;                      -fx-border-color: #9c4dff;                      -fx-border-width: 0 0 2 0;                      -fx-padding: 15;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(156,77,255,0.8), 0, 0, 0, 8);" text="Управление бронированиями" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
            <TableView fx:id="bookingsTable" style="                 -fx-background-color: #1a1a1a;                 -fx-table-cell-border-color: transparent;                 -fx-selection-bar: #9c4dff;                 -fx-selection-bar-non-focused: #9c4dff;             ">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="50" style="-fx-text-fill: #9c4dff; -fx-alignment: CENTER;" text="ID">
                        <cellValueFactory><PropertyValueFactory property="bookingId" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="clientColumn" prefWidth="80" style="-fx-text-fill: #9c4dff; -fx-alignment: CENTER;" text="ID клиента">
                        <cellValueFactory><PropertyValueFactory property="clientId" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="computerColumn" prefWidth="100" style="-fx-text-fill: #9c4dff; -fx-alignment: CENTER;" text="ID компьютера">
                        <cellValueFactory><PropertyValueFactory property="computerId" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="startColumn" prefWidth="150" style="-fx-text-fill: #9c4dff;" text="Начало">
                        <cellValueFactory><PropertyValueFactory property="startTime" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="endColumn" prefWidth="150" style="-fx-text-fill: #9c4dff;" text="Конец">
                        <cellValueFactory><PropertyValueFactory property="endTime" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="statusColumn" prefWidth="150" style="-fx-text-fill: #9c4dff;" text="Статус">
                        <cellValueFactory><PropertyValueFactory property="status" /></cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>

            <HBox alignment="CENTER" spacing="15" style="-fx-padding: 15;                          -fx-background-color: rgba(30,30,30,0.7);                          -fx-background-radius: 10;                          -fx-border-color: #9c4dff;                          -fx-border-width: 1;                          -fx-border-radius: 10;">
                <Button onAction="#handleFilterAll" style="-fx-background-color: linear-gradient(to bottom, #3a1c71, #9c4dff);                                -fx-text-fill: white;                                -fx-font-size: 14px;                                -fx-font-weight: bold;                                -fx-pref-width: 100;                                -fx-pref-height: 35;                                -fx-background-radius: 5;                                -fx-cursor: hand;" text="Все" />

                <Button onAction="#handleFilterActive" style="-fx-background-color: linear-gradient(to bottom, #3a1c71, #9c4dff);                                -fx-text-fill: white;                                -fx-font-size: 14px;                                -fx-font-weight: bold;                                -fx-pref-width: 100;                                -fx-pref-height: 35;                                -fx-background-radius: 5;                                -fx-cursor: hand;" text="Активные" />

                <Button fx:id="refreshButton" onAction="#handleRefresh" style="-fx-background-color: linear-gradient(to bottom, #3a1c71, #9c4dff);                                -fx-text-fill: white;                                -fx-font-size: 14px;                                -fx-font-weight: bold;                                -fx-pref-width: 100;                                -fx-pref-height: 35;                                -fx-background-radius: 5;                                -fx-cursor: hand;" text="Обновить" />

                <Button fx:id="saveButton" onAction="#handleSaveChanges" style="-fx-background-color: linear-gradient(to bottom, #3a1c71, #9c4dff);                                -fx-text-fill: white;                                -fx-font-size: 14px;                                -fx-font-weight: bold;                                -fx-pref-width: 100;                                -fx-pref-height: 35;                                -fx-background-radius: 5;                                -fx-cursor: hand;" text="Сохранить" />

                <Button fx:id="cancelButton" onAction="#handleCancelBooking" style="-fx-background-color: linear-gradient(to bottom, #3a1c71, #9c4dff);                                -fx-text-fill: white;                                -fx-font-size: 14px;                                -fx-font-weight: bold;                                -fx-pref-width: 100;                                -fx-pref-height: 35;                                -fx-background-radius: 5;                                -fx-cursor: hand;" text="Отменить" />
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 15;                      -fx-background-color: rgba(30,30,30,0.7);                      -fx-background-radius: 15 15 0 0;">
            <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: #9c4dff; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-size: 14px; -fx-font-weight: bold; -fx-pref-width: 100; -fx-cursor: hand;" text="Назад" />

            <Label fx:id="statusLabel" style="-fx-text-fill: #9c4dff;                           -fx-font-size: 14px;                           -fx-font-weight: bold;" />
        </HBox>
    </bottom>
</BorderPane>
