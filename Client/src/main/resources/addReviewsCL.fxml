<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" alignment="TOP_CENTER" fillWidth="false" prefHeight="600.0" prefWidth="850.0" spacing="15" style="-fx-padding: 25; -fx-background-color: #121212;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Сlient.AddReviewClientController">

    <!-- Верхняя панель с заголовком и кнопкой назад -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 15 0;">
        <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: #9c4dff; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-size: 14px; -fx-cursor: hand; -fx-pref-width: 80; -fx-pref-height: 35;" text="← Назад">
            <font>
                <Font name="System Bold" />
            </font>
        </Button>

        <Label style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(156,77,255,0.8), 0, 0, 0, 5);" text="Добавить отзыв" />
    </HBox>

    <!-- Основная форма -->
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(30,30,30,0.7);                  -fx-background-radius: 15;                  -fx-border-color: #9c4dff;                  -fx-border-width: 1;                  -fx-border-radius: 15;                  -fx-padding: 25;                  -fx-min-width: 600;">

        <!-- Поле для текста отзыва -->
        <VBox spacing="5">
            <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 16px;" text="Ваш отзыв:" />
            <TextArea fx:id="reviewTextArea" prefHeight="200.0" prefWidth="600.0" promptText="Напишите ваш отзыв здесь..." style="-fx-control-inner-background: #2b2b2b;                             -fx-text-fill: white;                             -fx-font-size: 14px;                             -fx-border-color: #9c4dff;                             -fx-border-width: 1;                             -fx-border-radius: 5;                             -fx-background-radius: 5;" />
        </VBox>

        <!-- Поле для рейтинга -->
        <VBox spacing="5">
            <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 16px;" text="Оценка (1-5):" />
            <TextField fx:id="ratingField" prefWidth="100.0" promptText="1-5" style="-fx-background-color: #2b2b2b;                             -fx-text-fill: white;                             -fx-border-color: #9c4dff;                             -fx-border-width: 1;                             -fx-border-radius: 5;                             -fx-background-radius: 5;                             -fx-font-size: 16px;                             -fx-alignment: CENTER;" />
        </VBox>
    </VBox>

    <!-- Кнопка сохранения -->
    <Button fx:id="saveReviewButton" onAction="#saveReview" style="-fx-background-color: linear-gradient(to bottom, #3a1c71, #9c4dff);                    -fx-text-fill: white;                    -fx-font-size: 18px;                    -fx-font-weight: bold;                    -fx-pref-height: 45;                    -fx-pref-width: 200;                    -fx-background-radius: 10;                    -fx-cursor: hand;" text="Отправить отзыв" />
</VBox>
