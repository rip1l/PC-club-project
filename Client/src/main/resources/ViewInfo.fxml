<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" alignment="TOP_CENTER" fillWidth="false" prefHeight="600.0" prefWidth="850.0" spacing="15" style="-fx-padding: 25; -fx-background-color: #121212;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Сlient.ViewInfoController">

    <!-- Верхняя панель с заголовком и кнопкой назад -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 15 0;">
        <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: #9c4dff; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-size: 14px; -fx-cursor: hand; -fx-pref-width: 80; -fx-pref-height: 35;" text="← Назад">
            <font>
                <Font name="System Bold" />
            </font>
        </Button>

        <Label style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(156,77,255,0.8), 0, 0, 0, 5);" text="О нашем клубе" />
    </HBox>

    <!-- Основной контент -->
    <VBox spacing="20" style="-fx-padding: 10;">
        <!-- Текстовая информация -->
        <VBox spacing="5">
            <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 18; -fx-font-weight: bold;" text="Описание клуба" />
            <TextArea fx:id="infoTextArea" editable="false" prefHeight="250.0" prefWidth="800" style="-fx-control-inner-background: #2b2b2b;                             -fx-text-fill: #e0e0e0;                             -fx-font-size: 14px;                             -fx-border-color: #9c4dff;                             -fx-border-width: 1;                             -fx-border-radius: 5;                             -fx-background-radius: 5;                             -fx-font-family: 'Arial';" wrapText="true" />
        </VBox>

        <!-- Контактная информация в две колонки -->
        <HBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 10 0 0 0;">
            <!-- Левая колонка - контакты -->
            <VBox spacing="10" style="-fx-background-color: rgba(30,30,30,0.7);                                    -fx-background-radius: 10;                                    -fx-border-color: #9c4dff;                                    -fx-border-width: 1;                                    -fx-border-radius: 10;                                    -fx-padding: 15;                                    -fx-min-width: 380;">
                <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 18; -fx-font-weight: bold;" text="Контактная информация" />

                <VBox spacing="8">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label style="-fx-text-fill: #a0a0a0; -fx-min-width: 100;" text="Адрес:" />
                        <Label fx:id="addressLabel" style="-fx-text-fill: #9c4dff;" text="ул. Якуба Коласа, 123" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label style="-fx-text-fill: #a0a0a0; -fx-min-width: 100;" text="Телефон:" />
                        <Label fx:id="phoneLabel" style="-fx-text-fill: #9c4dff;" text="+375 44 77 66 123" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label style="-fx-text-fill: #a0a0a0; -fx-min-width: 100;" text="Email:" />
                        <Label fx:id="emailLabel" style="-fx-text-fill: #9c4dff;" text="club@arena.com" />
                    </HBox>
                </VBox>
            </VBox>

            <!-- Правая колонка - соцсети и карты -->
            <VBox spacing="10" style="-fx-background-color: rgba(30,30,30,0.7);                                    -fx-background-radius: 10;                                    -fx-border-color: #9c4dff;                                    -fx-border-width: 1;                                    -fx-border-radius: 10;                                    -fx-padding: 15;                                    -fx-min-width: 380;">
                <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 18; -fx-font-weight: bold;" text="Мы в соцсетях" />

                <VBox spacing="15">
                    <Label fx:id="mapLabel" style="-fx-background-color: transparent;                                                   -fx-text-fill: #9c4dff;                                                   -fx-border-color: #9c4dff;                                                   -fx-border-width: 1;                                                   -fx-border-radius: 5;                                                   -fx-background-radius: 5;                                                   -fx-cursor: hand;                                                   -fx-alignment: CENTER_LEFT;" text="Посмотреть на карте">
                        <font>
                            <Font size="14" />
                        </font>
                    </Label>

                    <HBox alignment="CENTER" spacing="20">
                        <Label fx:id="VkLabel" style="-fx-background-color: transparent;                                                      -fx-text-fill: #9c4dff;                                                      -fx-border-color: #9c4dff;                                                      -fx-border-width: 1;                                                      -fx-border-radius: 5;                                                      -fx-background-radius: 5;                                                      -fx-cursor: hand;                                                      -fx-min-width: 100;" text="VK">
                            <font>
                                <Font size="14" />
                            </font>
                        </Label>

                        <Label fx:id="InstaLabel" style="-fx-background-color: transparent;                                                         -fx-text-fill: #9c4dff;                                                         -fx-border-color: #9c4dff;                                                         -fx-border-width: 1;                                                         -fx-border-radius: 5;                                                         -fx-background-radius: 5;                                                         -fx-cursor: hand;                                                         -fx-min-width: 100;" text="Instagram">
                            <font>
                                <Font size="14" />
                            </font>
                        </Label>
                    </HBox>
                </VBox>
            </VBox>
        </HBox>
    </VBox>
</VBox>
