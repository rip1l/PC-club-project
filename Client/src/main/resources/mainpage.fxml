<VBox fx:id="mainContainer" alignment="CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: #121212;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MainpageController">

