<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" alignment="TOP_CENTER" fillWidth="false" prefHeight="700.0" prefWidth="1000.0" spacing="15" style="-fx-padding: 25; -fx-background-color: #121212;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Сlient.ViewComputersController">

    <!-- Верхняя панель с заголовком и кнопкой назад -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 15 0;">
        <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: #9c4dff; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-size: 14px; -fx-cursor: hand; -fx-pref-width: 80; -fx-pref-height: 35;" text="← Назад">
            <font>
                <Font name="System Bold" />
            </font>
        </Button>

        <Label style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(156,77,255,0.8), 0, 0, 0, 5);" text="Компьютеры клуба" />
    </HBox>

    <!-- Основное окно с компьютерами -->
    <ScrollPane fitToWidth="true" style="-fx-background: #121212; -fx-border-color: #121212;">
        <VBox fx:id="computersContainer" alignment="TOP_CENTER" prefHeight="478.0" prefWidth="934.0" spacing="15" style="-fx-padding: 15; -fx-background-color: #121212;">
            <!-- Компьютеры будут добавляться сюда динамически -->

            <!-- Шаблон компьютера (скрытый) -->
            <VBox fx:id="computerTemplate" style="-fx-background-color: rgba(30,30,30,0.7);                          -fx-background-radius: 10;                          -fx-border-color: #9c4dff;                          -fx-border-width: 1;                          -fx-border-radius: 10;                          -fx-padding: 15;" visible="false">
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <VBox alignment="CENTER_LEFT" spacing="5" style="-fx-min-width: 150;">
                        <Label fx:id="pcNumberLabel" style="-fx-text-fill: #9c4dff; -fx-font-size: 20px; -fx-font-weight: bold;" text="ПК №1" />
                        <Label fx:id="statusLabel" style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px;">
                        </Label>
                    </VBox>

                    <VBox alignment="CENTER_LEFT" spacing="5" style="-fx-min-width: 700;">
                        <Label style="-fx-text-fill: #a0a0a0; -fx-font-size: 14px;" text="Характеристики:" />
                        <Label fx:id="specsLabel" style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px; -fx-wrap-text: true;" wrapText="true" />
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>
